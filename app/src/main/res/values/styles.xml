<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="errorEnabled">true</item>

<!--        <item name="boxStrokeColor">@color/black</item>-->
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="ToolbarStyle" >
        <item name="android:background">@color/colorPrimary</item>
        <item name="theme">@style/ThemeOverlay.MaterialComponents.Dark</item>
    </style>

    <style name="MyThemeOverlay_Toolbar" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <!-- color used by navigation icon and overflow icon -->
        <item name="tint">@android:color/white</item>
    </style>

    <style name="Bold_Text">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>